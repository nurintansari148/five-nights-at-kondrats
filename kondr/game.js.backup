                localStorage.setItem('fnac_user_' + this.currentUser, JSON.stringify(userData));
                
                alert('–ö—É–ø–ª–µ–Ω–æ! –¢–µ–ø–µ—Ä—å —Ç—ã –Ω–∞—á–∏–Ω–∞–µ—à—å –∏–≥—Ä—É —Å–æ 110% —ç–Ω–µ—Ä–≥–∏–∏!');
                this.openShop(); // –æ–±–Ω–æ–≤–ª—è–µ–º –º–∞–≥–∞–∑–∏–Ω
            }
